<Window x:Class="PairMatch.Views.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Topmost="True"
        Title="Delete User"
        Width="330" Height="150" ResizeMode="NoResize"
        Background="#72AECD" Foreground="White"
        WindowStyle="ToolWindow" ShowInTaskbar="False">

    <Grid>

        <Label Content="Are you sure you want to delete this user?"
               Width="250" Height="30"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
               HorizontalContentAlignment="Center"
               Foreground="White"/>

        <Button Content="Yes, go on!"
                Width="90" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="55,0,0,20"
                Style="{DynamicResource RoundedButtonStyle}"
                Click="DeleteButton_Click"/>

        <Button Content="No, go back"
                Width="90" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,55,20"
                Style="{StaticResource RoundedButtonStyle}" Background="#90333C"
                Click="CancelButton_Click"/>

    </Grid>
</Window>
